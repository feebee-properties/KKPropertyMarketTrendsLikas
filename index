        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
          <div className="bg-white rounded-lg shadow-xl p-6 md:p-8 max-w-2xl w-full relative">
            <h3 className="text-2xl font-bold text-teal-800 mb-4 text-center">
              âœ¨ AI-Generated Property Description âœ¨
            </h3>
            <div className="max-h-96 overflow-y-auto text-gray-700 text-base leading-relaxed mb-6 p-4 border rounded-lg bg-gray-50">
              {generatedDescription}
            </div>
            <div className="text-center">
              <button
                onClick={() => setShowDescriptionModal(false)}
                className="inline-flex items-center bg-orange-600 text-white font-bold py-2 px-5 rounded-full shadow-md hover:bg-orange-700 transition-colors duration-300"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default App;
